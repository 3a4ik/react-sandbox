.user_form
  border 1px solid #000
  padding 20px
  margin 10px
  width 300px
  background-color #fff

  &__block:not(:first-child)
    margin-top 10px
  &__block:not(:last-child)
    margin-bottom 10px
  &__block
    display flex
    flex-direction column

    &__input
      outline none
      padding 10px
      border-radius 5px
      background-color darken(#fff, 10%)
      transition box-shadow .1s

      &:focus
        box-shadow 0 0 0 3px alpha(#000, 0.2)
        &::-webkit-input-placeholder
          color transparent
        &:-moz-input-placeholder
          color transparent
